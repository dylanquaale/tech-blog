
<div class="text">
	<div class="container postBoxCont">
		<div class="row headerRow">
			<div class="col-8">
				<h2 class="postTitle text-uppercase">{{title}}</h2>
			</div>
			<p class="text-center postDescTwo">{{content}}</p>
			<div class="col-4">
				<p class="postCreate text-right">Created by {{user.username}} on {{format_date createdAt}}</p>
			</div>
		</div>
		</div>	

		<form class="new-comment-form formCont d-flex flex-wrap justify-content-center" data-postid={{id}}>
			<div class="textAreaCont p-2">
				<label>Enter Comment</label>
				<textarea id='comment_text' name="comment-body"
				placeholder="Enter comment here"
				cols="30"
				rows="2"></textarea>
			</div>
			<div class="btnComment p-2">
				<button class="button btn btn-success" type="submit">Add Comment</button>
			</div>
		</form>

		<h2 class="text-center">Comments</h2>
		{{#each comments as |comment|}}
		<div class="commentCont">
			<p class="text-center commentText">{{comment.comment_text}}</p>
			<p class="text-center commentOwner"><span>~</span>Created by {{comment.user.username}} on {{format_date createdAt}}<span>~</span></p>
		</div>
		{{/each}} 

</div>

		<script src="/js/comment.js"></script>